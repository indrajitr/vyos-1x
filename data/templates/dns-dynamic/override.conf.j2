{% set vrf_command = 'ip vrf exec ' ~ vrf ~ ' ' if vrf is vyos_defined else '' %}
{% set cache_file = config_file | replace('.conf', '.cache') %}
{% set pid_file = config_file | replace('.conf', '.pid') %}
[Unit]
ConditionPathExists={{ config_file }}
After=vyos-router.service

[Service]
EnvironmentFile=
ExecStart=
ExecStart={{ vrf_command }}/usr/bin/ddclient --file {{ config_file }} --cache {{ cache_file }} --pid {{ pid_file }} --foreground --syslog
